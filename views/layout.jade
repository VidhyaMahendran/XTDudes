doctype html
mixin form
  form&attributes(attributes)
    block

mixin formparagroup(inputAttributes)
  p(class='group')
    label(for='#{inputAttributes.inputname}')
      | #{inputAttributes.labelText}
    input(type='#{inputAttributes.type}', name='#{inputAttributes.inputname}', id='#{inputAttributes.inputname}')
    block

mixin formlistgroup(inputAttributes)
  p(class='group')
    label(for='#{inputAttributes.inputname}')
      | #{inputAttributes.labelText}
    select(name='#{inputAttributes.inputname}', id='#{inputAttributes.inputname}')
      each val, index in inputAttributes.listOptions
        option(value='#{index}') #{val}
    block

mixin formbuttonGroup(buttonsList)
  p(class='group')
    each buttonType in buttonsList
      span
        input(type='#{buttonType.type}', name='#{buttonType.inputname}', id='#{buttonType.inputname}', value='#{buttonType.labelText}')
  block

mixin formsubmitbutton(inputAttributes)
  p(class='group')
    input(type='#{inputAttributes.type}', name='#{inputAttributes.inputname}', id='#{inputAttributes.inputname}', value='#{inputAttributes.labelText}')
    block

mixin formhidden(inputAttributes)
  input(type='#{inputAttributes.type}', name='#{inputAttributes.inputname}', id='#{inputAttributes.inputname}', value='#{inputAttributes.value}')
  block

